extends ../../layouts/default.pug

block main
  h1.mb-4 Thêm mới nhóm quyền
  form(
    action='/admin/roles/create'
    method="POST"
  )
    div.form-group
      label(for="title") Tiêu đề
      input#title.form-control(
        type="text"
        name="title"
        required
      )

    div.form-group
      label(for="desc") Mô tả
      input#desc.form-control(
        type="text"
        name="description"
      )

    div.form-group
      button.btn.btn-primary(
        type="submit"
      ) Tạo mới
